<div class="container split">
  <div class="card-complete-user">
    <div class="card-user">
      <div class="rounded-circle">
        <% if current_user.spotify_photo? %>
          <%= image_tag current_user.spotify_photo, class: "avatar-photo", height: 200, width: 200, crop: :scale, :border => { :width => 4, :color => 'black' } %>
        <% elsif current_user.photo.attached? %>
          <%= cl_image_tag current_user.photo.key, class: "avatar-photo",  height: 200, width: 200, crop: :scale, :border => { :width => 4, :color => 'black' } %>
        <% else %>
          <%= image_tag "https://res.cloudinary.com/diarvpaib/image/upload/v1614805568/backpack_round_black_anmpmn.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
      </div>
      <div class="card-user-info">
        <div class="card-info font-user">
          <h2>Nombre de usuario: <%= @user.name %></h2>
        </div>
        <div class="card-info font-user">
          <p>Email: <%= @user.email %></p>
        </div>
      </div>
    </div>
    <br>
      <div class="notification-actions">
        <%= link_to 'Editar', edit_user_registration_path(current_user), class:"btn" %>
        <%= link_to "Eliminar cuenta",
              user_path(@user),
              method: :delete,
              data: { confirm: "¿Está seguro?" }, class:"btn" %>
      </div>
    <br>
    <br>
    <div class="card-user-favorite font-user">
      <h3>Artistas favoritos:
        <ul>
          <% @user.artists.uniq.each do |artist| %>
            <li> <%= link_to artist.name, artist_path(artist), class:"index-link"%> </li>
          <% end %>
        </ul>
      </h3>
    </div>
  </div>
  <br>
</div>
<%= render 'shared/footer' %>
