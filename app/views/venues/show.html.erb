<br>
<div class="container">
  <h1 class = "text-center"> <%= @venue.name %></h1>
  <p class = "text-center"><%= @venue.address %></p>
  <h2 class = "text-center"> Proximos eventos aqu√≠</h2>
  <div class="row multi-columns-row">
    <% @concerts.each do |concert| %>
      <div class="col-sm-6 col-md-3 col-lg-3">
        <% if concert.venue_id == @venue.id %>
          <div class="card"  style="">
            <ul class="text-center p-1">
              <li class="list-unstyled"><%= link_to concert.title, concert_path(concert) %> </li>
              <li class="list-unstyled"><%= link_to (cl_image_tag concert.photo.key, height: 100, width: 100, crop: :scale), concert_path(concert)  %> </li>
              <li class="list-unstyled"><%= concert.date %> </li>
            </ul>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
