<div class="container">
  <h2>Editar usuario</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Aguardando confirmación para: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,
                  label: "Contraseña nueva",
                  hint: "Dejar en blanco si no deseas cambiar la contraseña",
                  required: false,
                  input_html: { autocomplete: "nueva-contraseña" } %>
      <%= f.input :password_confirmation,
                  label: "Confirmar contraseña",
                  required: false,
                  input_html: { autocomplete: "nueva-contraseña" } %>
      <%= f.input :current_password,
                  label: "Contraseña actual",
                  hint: "Necesitamos su contraseña actual para confirmar sus cambios",
                  required: true,
                  input_html: { autocomplete: "contraseña-actual" } %>
      <%= f.input :name, label: "Nombre" %>
      <%= f.input :photo, label: "Foto" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Actualizar" %>
    </div>
  <% end %>

  <h3>Cancelar mi cuenta</h3>

  <p>¿No está satisfecho? <%= link_to "Eliminar mi cuenta", registration_path(resource_name), data: { confirm: "¿Esta seguro?" }, method: :delete %></p>

  <%= link_to "Volver", :back %>
</div>
