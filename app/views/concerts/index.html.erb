<div class="container footer-fix split">
  <h1 class="text-center">Conciertos</h1>
  <div class="container-concerts">
    <div class="grid">
      <% @concerts.each do |concert| %>
        <div class="card-concerts m-2">
            <div>
            <img src="<%= concert.photo_url %>" alt="<%= concert.title %>" style="width: 100%; height: 100%; border-top-left-radius: 10px; border-bottom-left-radius: 10px; object-fit: fit;">
            </div>
            <div class="card-body text-end">
                <h5 class="card-title"><%= concert.title %></h5>
                <div class="card-text break-line"><%= concert.content.split(',')[0] %></div>
                <p class="card-text"><small class="text-muted"><%= concert.date %></small></p>
                <a href="<%= concert_path(concert) %>" class="stretched-link"></a>
            </div>
        </div>
      <% end %>
    </div>
    <div id="map" style="width: 100%; height: 100vh;"
      data-controller="mapbox"
      data-mapbox-markers-value="<%= @markers.to_json %>"
      data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
