<div class="container" >
  <div class="container-row" style="background-color:#ddd">
      <div class="text-center">
        <h1>
          <%= @concert.title %>
        </h1>
      </div>
      <div style="background-color:#ddd">
        <h4><%= link_to @concert.content, venues_path %></h4>
        <h4><%= @concert.date %></h4>
      </div>
      <div>
        <%= cl_image_tag @concert.photo.key %>
        <a href="<%= @concert.url %>" class="btn btn-primary" target="_blank" > Buy tickets </a>
        <p>COMPATIR</p>
        <a href="https://www.facebook.com/sharer/sharer.php?u=awante.herokuapp.com/concerts/<%= @concert.id %>" class="sharer button" target="_blank">
          <i class="fab fa-facebook"></i>
        </a>
        <a href=" https://wa.me/?text=awante.herokuapp.com/concerts/<%= @concert.id %>" class="sharer button" target="_blank">
          <i class="fab fa-whatsapp"></i>
        </a>
        <a href="https://twitter.com/intent/tweet?text=awante.herokuapp.com/concerts/<%= @concert.id %>" class="sharer button" target="_blank">
          <i class="fab fa-twitter"></i>
        </a>
      </div>
    </div>
</div>
