<br>
<div class="container" >
  <h1>Artists</h1>
  <div class="row multi-columns-row">
    <% @artists.each do |artist| %>
      <div class="col-sm-6 col-md-3 col-lg-3">
        <div class="card"  style="">
          <ul class="text-center p-1">
            <li class="list-unstyled"><%= link_to (cl_image_tag artist.photo.key, height: 100, width: 100, crop: :scale), artist_path(artist)  %> </li>
            <li class="list-unstyled"><%= link_to artist.name, artist_path(artist) %> </li>
            <%= simple_form_for [ artist, @favorite ] do |f| %>
              <%= f.hidden_field :artist_id, :value => artist.id %>
              <%= f.submit "Mark as favorite" %>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>
